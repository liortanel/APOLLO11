@{
    ViewData["Title"] = "Integrantes del Grupo";
}

<style>
    body {
        background: radial-gradient(ellipse at center, #220000 0%, #110000 90%);
        color: white;
        font-family: monospace;
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .titulo-integrantes {
        font-size: 40px;
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff, 0 0 20px #00cccc;
        margin-bottom: 40px;
        margin-top: 30px;
        text-align: center;
    }
    .integrantes-container {
        display: flex;
        gap: 60px;
        justify-content: center;
        margin-bottom: 40px;
    }
    .integrante {
        width: 340px;
        height: 250px;
        box-sizing: border-box;
        background: rgba(0,0,0,0.7);
        border: 2px solid #00ffff;
        border-radius: 16px;
        padding: 30px 40px 20px 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 0 20px #00ffff33;
        transition: transform 0.2s;
    }
    .integrante:hover {
        transform: scale(1.05);
        box-shadow: 0 0 30px #00ffff99;
    }
    .integrante-foto {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #ff6600;
        margin-bottom: 18px;
        background: #222;
    }
    .integrante-nombre {
        font-size: 24px;
        color: #ff6600;
        text-shadow: 0 0 8px #ff6600;
        margin-top: 0;
        margin-bottom: 0;
        text-align: center;
    }
    .boton-volver {
        font-size: 20px;
        color: #ffffff;
        background-color: #222;
        border: 2px solid #00ffff;
        padding: 10px 30px;
        cursor: pointer;
        text-align: center;
        text-shadow: 0 0 5px #00ffff;
        border-radius: 8px;
        transition: background 0.3s, transform 0.2s;
        text-decoration: none;
        margin-top: 30px;
        margin-left: 33%;
    }
    .boton-volver:hover {
        background-color: #00ffff;
        color: #000;
        transform: scale(1.05);
    }
</style>

<div class="titulo-integrantes">Integrantes del Grupo</div>
<div class="integrantes-container">
    <div class="integrante">
        <img src="/img/santiagodobro.jpg" alt="Santiago Dobro" class="integrante-foto" />
        <div class="integrante-nombre">Santiago Dobro</div>
    </div>
    <div class="integrante">
        <img src="/img/liortanel.jpg" alt="Lior Tanel" class="integrante-foto" />
        <div class="integrante-nombre">Lior Tanel</div>
    </div>
</div>
<a href="/Home/Index#final" class="boton-volver">Volver al inicio</a>

<script>
  // Pausar y ocultar el timer global al entrar a Integrantes
  if (window.globalTimer) {
    window.globalTimer.pause();
  }
  // Adem√°s, si el elemento existe, lo oculto por si acaso
  var timerEl = document.getElementById('globalTimer');
  if (timerEl) timerEl.style.display = 'none';
</script> 