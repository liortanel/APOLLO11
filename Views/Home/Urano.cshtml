    <form action="/Home/VerificarUrano" method="post" style="margin-top: 50px;">
    <input type="text" name="respuesta" placeholder="Ingresá la clave..." style="
      background: black; color: #00ffff; border: 2px solid #00ffff;
      font-size: 20px; padding: 10px; border-radius: 8px; margin-left: 36.5%;" >
    <button type="submit" class="boton-jugar">></button>
